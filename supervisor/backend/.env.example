# ============================================
# SUPERVISOR V2.0 - Configuration d'Environnement
# ============================================
# Copier ce fichier en .env et remplir avec vos valeurs

# ============================================
# Django Core
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Base de données MySQL
# ============================================
DB_NAME=supervisor_db
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# ============================================
# JWT (Authentification)
# ============================================
JWT_ACCESS_TOKEN_LIFETIME_HOURS=2
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# ============================================
# CORS (Frontend)
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:9000

# ============================================
# Upload de fichiers
# ============================================
# Taille maximale des fichiers uploadés en bytes (100 MB par défaut)
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600
# Types de fichiers autorisés (image/jpeg,image/png,application/pdf)
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# Celery & Redis (Tâches asynchrones)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Google Maps API
# ============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# WhatsApp / Twilio
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890

# ============================================
# WhatsGPS API (Tracking véhicules)
# ============================================
WHATSGPS_API_KEY=your-whatsgps-api-key
WHATSGPS_API_URL=https://api.whatsgps.com

# ============================================
# Email (optionnel)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# ============================================
# Sentry (Monitoring - optionnel)
# ============================================
SENTRY_DSN=your-sentry-dsn
